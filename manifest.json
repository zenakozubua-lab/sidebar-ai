{
  "manifest_version": 3,
  "name": "AI Sidebar Launcher",
  "description": "Быстрый доступ к AI-сервисам: встроенный чат и запуск внешних AI без iframe-блокировок.",
  "version": "1.1.1",
  "permissions": [
    "sidePanel",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://openrouter.ai/*"
  ],
  "action": {
    "default_title": "Открыть AI Sidebar"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "sidebar.html"
  }
}
